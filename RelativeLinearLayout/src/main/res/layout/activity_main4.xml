<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0">


    <TextView
        android:id="@+id/txt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Center"
        android:textSize="30dp"
        android:background="#f00" />

    <TextView
        android:id="@+id/txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:textSize="30dp"
        android:background="#ff0"
        android:layout_toRightOf="@+id/txt_center"
        android:layout_alignBaseline="@id/txt_center"/>

    <TextView
        android:id="@+id/txt_parent_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Parent_bottom"
        android:textSize="30dp"
        android:background="#00f"/>

      <TextView
          android:id="@+id/txt_Top"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/txt_parent_bottom"
          android:layout_above="@id/txt_parent_bottom"
          android:text="Top"
          android:textSize="30dp"
          android:background="#ff0"/>


</RelativeLayout>
